#deffunc atxinit
	if ( atxthrough == 0 ) {
		notesel atbuff
		atbuff = ""
	}
	atxthrough = 0
	listmax = 0
	cs = 0
	page = 0
	cc = CHARA_PLAYER
	cs_bk = -1
	pagesize = 16
	chatesc = -1
	if ( atxbg != atxbgbk ) {
		mode = MODELIST_MAIN
		screenupdate = -1
		gosub *screen_draw
		mode = MODELIST_TXT_ADV
		atxbgbk = atxbg
		gsel BUFFER_BUF
		gmode 0
		pos 0, 0
		picload exedir + "\\graphic\\" + atxbg + ".bmp", 1
		pos 0, inf_msgh
		gzoom windoww, windowh - inf_verh - inf_msgh, 4, 0, 0, 240, 160
		gmode 2
		p = windoww / 192
		repeat p + 1
			if ( cnt == p ) {
				sx = windoww \ 192
			}
			else {
				sx = 192
			}
			pos cnt * 192, 0
			gcopy BUFFER_INF, 496, 528, sx, inf_msgh
		loop
		window2 windoww - 208, 0, 208, 98, 0, 0
		pos windoww - 204, 4
		gzoom 200, 90, 0, 120, 88, windoww - 120, windowh - inf_verh - 112, 1
		gsel BUFFER_SCREEN
	}
	return

