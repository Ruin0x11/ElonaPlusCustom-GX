*adv_action
	repeat MAX_CHARA_ADVENTURER, MAX_CHARA_FOLLOWER
		rc = cnt
		cc = rc
		if ( cdata(CDATA_HIRE_DATE, rc) != 0 ) {
			if ( cdata(CDATA_HIRE_DATE, rc) < gdata(GDATA_HOUR) + gdata(GDATA_DAY) * 24 + gdata(GDATA_MONTH) * 24 * 30 + gdata(GDATA_YEAR) * 24 * 30 * 12 ) {
				cdata(CDATA_HIRE_DATE, rc) = 0
				cbitmod CHARA_BIT_HIRED, rc, 0
				cdata(CDATA_RELATION, rc) = 0
				txt lang(cdatan(CDATAN_NAME, rc) + "との契約期間が切れた。", "The contractual period with " + cdatan(CDATAN_NAME, rc) + " has come to an end.")
			}
		}
		if ( cdata(CDATA_AREA, rc) == gdata(GDATA_AREA) ) {
			continue
		}
		if ( cdata(CDATA_EXIST, rc) == CHAR_STATE_ADV_DEAD ) {
			gosub *adv_generate
			continue
		}
		if ( cdata(CDATA_EXIST, rc) == CHAR_STATE_ADV_HOSPITAL ) {
			if ( gdata(GDATA_HOUR) + gdata(GDATA_DAY) * 24 + gdata(GDATA_MONTH) * 24 * 30 + gdata(GDATA_YEAR) * 24 * 30 * 12 >= cdata(CDATA_RESPAWN, rc) ) {
				if ( rnd(3) == 0 | cdata(CDATA_ADVENTURER_MESSAGE_RECEIVED, rc) == ADVENTURER_MESSAGE_YOU_HAVE_NO_TALENT  & cdata(CDATA_ADVENTURER_MESSAGE_RECEIVED, rc) != ADVENTURER_MESSAGE_I_AM_ROOTING_FOR_YOU ) {
					if ( cdata(CDATA_ADVENTURER_MESSAGE_RECEIVED, rc) == ADVENTURER_MESSAGE_YOU_HAVE_NO_TALENT ) {
						cdata(CDATA_ADVENTURER_MESSAGE_RECEIVED, rc) = ADVENTURER_MESSAGE_NONE
						txt lang(cdatan(CDATAN_AKA, rc) + "はあなたからのメッセージを思い出した…。", cdatan(CDATAN_AKA, rc) + " recalled your message...")
					}
					addnews 5, rc
					cdata(CDATA_EXIST, rc) = CHAR_STATE_DEAD
					gosub *adv_generate
				}
				else {
					if ( cdata(CDATA_ADVENTURER_MESSAGE_RECEIVED, rc) == ADVENTURER_MESSAGE_I_AM_ROOTING_FOR_YOU ) {
						cdata(CDATA_ADVENTURER_MESSAGE_RECEIVED, rc) = ADVENTURER_MESSAGE_NONE
						txt lang(cdatan(CDATAN_AKA, rc) + "はあなたからのメッセージを思い出した…。", cdatan(CDATAN_AKA, rc) + " recalled your message...")
					}
					addnews 3, rc
					cdata(CDATA_EXIST, rc) = CHAR_STATE_ADV
				}
				continue
			}
		}
		if ( rnd(60) == 0 ) {
			repeat 10
				if ( rnd(4) == 0 ) {
					p = rnd(MAX_AREA_COUNT - STARTING_RANDOM_AREA) + STARTING_RANDOM_AREA
				}
				else {
					p = rnd(STARTING_USER_AREA)
				}
				if ( adata(ADATA_ID, p) == AREA_NONE | p == AREA_HOME | adata(ADATA_TYPE, p) == MAP_TYPE_QUEST | p == AREA_TEST_GROUND ) {
					p = AREA_NORTH_TYRIS
				}
				if ( adata(ADATA_PARENT, p) == AREA_SOUTH_TYRIS ) {
					if ( gdata(GDATA_FLAG_MAIN) < 200 ) {
						p = AREA_NORTH_TYRIS
					}
				}
				if ( adata(ADATA_PARENT, p) == AREA_LOST_YLVA ) {
					if ( gdata(GDATA_FLAG_MAIN) < 400 ) {
						p = AREA_SOUTH_TYRIS
					}
				}
				if ( cnt < 5 ) {
