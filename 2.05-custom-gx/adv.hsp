*adv_gainItem
	f = 0
	inv_getheader rc
	repeat 10
		ci = invhead + rnd(invrange)
		if ( inv(INV_ITEM_NUM, ci) == 0 ) {
			f = 1
			break
		}
		if ( inv(INV_ITEM_EQUIP, ci) != 0 ) {
			continue
		}
		if ( inv(INV_ITEM_NUM, ci) != 0 ) {
			if ( cdata(CDATA_AI_ITEM, rc) == ci ) {
				cdata(CDATA_AI_ITEM, rc) = 0
			}
			inv(INV_ITEM_NUM, ci) = 0
			f = 1
			break
		}
	loop
	if ( f == 0 ) {
		return 0
	}
	flt cdata(CDATA_LEVEL, rc), 4
	if ( rnd(3) == 0 ) {
		flttypemajor = fsetwear(rnd(length(fsetwear)))
	}
	else {
		flttypemajor = fsetitem(rnd(length(fsetitem)))
	}
	itemcreate rc, ITEM_ID_DUMMY, -1, -1, 0
	if ( stat == 0 ) {
		return 0
	}
	inv(INV_ITEM_KNOWN, ci) = ITEM_KNOWN_FULL
	if ( inv(INV_ITEM_QUALITY, ci) >= FIX_QUALITY_MIRACLE ) {
		if ( refitem(inv(INV_ITEM_ID, ci), DBSPEC_TYPE) < FILTER_ITEM_MIN ) {
			valn = itemname(ci)
			addnews 1, rc
		}
	}
	gosub *chara_equip
	return

*chara_adjustInv
	p = inv_getfreeid(tc)
	if ( p != (-1) ) {
		return p
	}
	repeat 100
		p = rnd(invrange) + invhead
		if ( inv(INV_ITEM_EQUIP, p) == 0 ) {
			inv(INV_ITEM_NUM, p) = 0
			if ( cdata(CDATA_AI_ITEM, tc) == p ) {
				cdata(CDATA_AI_ITEM, tc) = 0
			}
			break
		}
	loop
	return p

*chara_equipFull
	inv_getheader rc
	repeat invrange, invhead
		ci = cnt
		if ( inv(INV_ITEM_NUM, cnt) == 0 | inv(INV_ITEM_EQUIP, cnt) != 0 ) {
			continue
		}
		gosub *chara_equip
	loop
	return

*chara_equip
	i = iequiploc(ci)
	if ( i != EQUIP_SLOT_NONE ) {
		r1 = rc
		eqdup = 0
		handkazu = 0
		repeat MAX_EQUIP_SLOT_TOTAL, CDATA_STARTING_EQUIP_SLOTS
			if ( inv(INV_ITEM_KNOWN, ci) == ITEM_KNOWN_FULL ) {
				if ( inv(INV_ITEM_IDENTIFY_LEVEL, ci) == 100 ) {
					if ( cdata(cnt, rc) / EXT_EQUIP_SLOTS == EQUIP_SLOT_SHOOT ) {
						bodylist(eqdup) = cnt
						eqdup++
					}
				}
				if ( cdata(cnt, rc) / EXT_EQUIP_SLOTS == EQUIP_SLOT_HAND ) {
					handkazu++
					if ( inv(INV_ITEM_IDENTIFY_LEVEL, ci) < 100 & inv(INV_ITEM_IDENTIFY_LEVEL, ci) > 0 ) {
						if ( handkazu == inv(INV_ITEM_IDENTIFY_LEVEL, ci) ) {
							bodylist(eqdup) = cnt
							eqdup++
						}
					}
				}
				if ( inv(INV_ITEM_IDENTIFY_LEVEL, ci) == 0 | inv(INV_ITEM_IDENTIFY_LEVEL, ci) == 500 | (i != EQUIP_SLOT_HAND & i != EQUIP_SLOT_SHOOT) ) {
					if ( cdata(cnt, rc) / EXT_EQUIP_SLOTS == i ) {
						bodylist(eqdup) = cnt
						eqdup++
					}
				}
			}
			else {
				if ( cdata(cnt, rc) / EXT_EQUIP_SLOTS == i ) {
					bodylist(eqdup) = cnt
					eqdup++
				}
			}
		loop
		if ( eqdup == 0 ) {
			return
		}
		repeat eqdup
			body = bodylist(cnt)
			i = cdata(body, rc) \ EXT_EQUIP_SLOTS
			if ( i == 0 ) {
				gosub *act_equip
				break
			}
			i--
			f = 0
			if ( inv(INV_ITEM_VALUE, ci) >= inv(INV_ITEM_VALUE, i) ) {
				f = 1
			}
			if ( eqdup > cnt + 1 ) {
				if ( cdata(bodylist(cnt + 1), rc) \ EXT_EQUIP_SLOTS == 0 ) {
					f = 0
				}
				else {
					if ( inv(INV_ITEM_VALUE, i) >= inv(INV_ITEM_VALUE, cdata(bodylist(cnt + 1), rc) \ EXT_EQUIP_SLOTS - 1) ) {
						f = 0
					}
				}
			}
			if ( f == 1 ) {
				cibk = ci
				gosub *act_unequip
				ci = cibk
				gosub *act_equip
				break
			}
		loop
	}
	locationweap = 0
	return

*supplyEquip
	haveweapon = 0
	repeat 100
		f = 0
		inv_getheader rc
		repeat 4
			ci = invhead + rnd(invrange)
			if ( inv(INV_ITEM_NUM, ci) == 0 ) {
				f = 1
				break
			}
			if ( inv(INV_ITEM_EQUIP, ci) != 0 ) {
				continue
			}
			if ( ibit(ITEM_BIT_DROP, ci) ) {
				continue
			}
			if ( inv(INV_ITEM_NUM, ci) != 0 ) {
				inv(INV_ITEM_NUM, ci) = 0
				f = 1
				break
			}
		loop
		if ( f == 0 ) {
			ci = invhead + invrange - 1
		}
		if ( cdata(CDATA_ROLE, rc) == ROLE_ADVENTURER ) {
			flt cdata(CDATA_LEVEL, rc), 3
		}
		else {
			flt cdata(CDATA_LEVEL, rc), calcfixlv(FIX_QUALITY_GOOD)
		}
		mustequip = 0
		repeat MAX_EQUIP_SLOT_TOTAL, CDATA_STARTING_EQUIP_SLOTS
			p = cdata(cnt, rc) / EXT_EQUIP_SLOTS
			if ( p == EQUIP_SLOT_NONE ) {
				break
			}
			if ( cdata(cnt, rc) \ EXT_EQUIP_SLOTS != EQUIP_SLOT_NONE ) {
				if ( p == EQUIP_SLOT_HAND ) {
					if ( haveweapon == 0 ) {
						if ( refitem(inv(INV_ITEM_ID, cdata(cnt, rc) \ EXT_EQUIP_SLOTS - 1), DBSPEC_TYPE) == FILTER_WEAPON ) {
							haveweapon = 1
						}
					}
				}
				continue
			}
			if ( p == EQUIP_SLOT_HAND ) {
				if ( haveweapon == 0 ) {
					flttypemajor = FILTER_WEAPON
					mustequip = 1
					break
				}
			}
			if ( p == EQUIP_SLOT_HEAD ) {
				flttypemajor = FILTER_HELM
				mustequip = 1
				break
			}
			if ( p == EQUIP_SLOT_BODY ) {
				flttypemajor = FILTER_ARMOR
				mustequip = 1
				break
			}
			if ( p == EQUIP_SLOT_SHOOT ) {
				flttypeminor = FILTER_RANGE_SHORTBOW
				mustequip = 1
				break
			}
			if ( p == EQUIP_SLOT_AMMO ) {
				flttypeminor = FILTER_AMMO_ARROW
				mustequip = 1
				break
			}
		loop
		if ( mustequip == 0 ) {
			break
		}
		itemcreate rc, ITEM_ID_DUMMY, -1, -1, 0
		if ( stat == 0 ) {
			break
		}
		inv(INV_ITEM_KNOWN, ci) = ITEM_KNOWN_FULL
		if ( inv(INV_ITEM_QUALITY, ci) >= FIX_QUALITY_MIRACLE ) {
			if ( refitem(inv(INV_ITEM_ID, ci), DBSPEC_TYPE) < FILTER_ITEM_MIN ) {
				if ( cdata(CDATA_ROLE, rc) == ROLE_ADVENTURER ) {
					valn = itemname(ci)
					addnews 1, rc
				}
			}
		}
		inv(INV_ITEM_IDENTIFY_LEVEL, ci) = 0
		gosub *chara_equip
		if ( cdata(CDATA_ROLE, rc) != ROLE_ADVENTURER ) {
			if ( rnd(3) ) {
				break
			}
		}
	loop
	return

