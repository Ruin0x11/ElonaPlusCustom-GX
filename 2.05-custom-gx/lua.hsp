*lua_hsp_assert
	p(0)=hl_toboolean(1)
    assert p(0)
    return 0

*lua_hsp_randomize
    if hl_gettop() == 0 {
        randomize
    } else {
        if ( hl_isinteger(1) ) {
            p = hl_tointeger(1)
            randomize p
        }
    }
    luaError("Invalid argument type")

*lua_hsp_rnd
    if hl_gettop() < 1 {
        luaError("Invalid argument count")
    }
    if hl_isinteger(1) {
        p = hl_tointeger(1)
        p = rnd(p)
        hl_pushinteger p
        return 1
    }
    luaError("Invalid argument type")

*lua_hsp_getvar
    if hl_gettop() < 1 {
        luaError("Invalid argument count")
    }
    s = hl_tolstring(1)
	v = hl_seekvar(s)
    if stat == -1 {
        return 0
    }
    hl_pushhspvalue v
    return 1

