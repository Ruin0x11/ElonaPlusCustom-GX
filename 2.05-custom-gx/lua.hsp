*lua_elona_advance_hour
    if hl_gettop() >= 1 & hl_isinteger(1) {
        i = limit(hl_tointeger(1), 1, 10000)
    } else {
        i = 1
    }
	repeat i
		gdata(GDATA_HOUR)++
		gosub *advance_hour
	loop
	return 0
